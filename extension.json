{
  "identifier": "org.RubySolargraph",
  "name": "Ruby Solargraph",
  "description": "An implementation of the Ruby Solargraph Language Server Definition",
  "version": "1.0",
  "categories": ["languages"],

  "main": "main.js",

  "activationEvents": ["onLanguage:ruby"],

  "entitlements": {
    "process": true,
    "filesystem": "readonly"
  },

  "config": [
    {
      "key": "rubySolargraph.language-server-path",
      "title": "The Solargraph Language Server Path",
      "type": "string",
      "placeholder": "/usr/bin/env",
      "default": "/usr/bin/env"
    },
    {
      "key": "rubySolargraph.ruby-version",
      "title": "The Ruby version Solargraph is installed with (using Rbenv)",
      "type": "string",
      "placeholder": "2.6.5"
    }
  ]
}
